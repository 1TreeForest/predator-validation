<?xml version="1.0" ?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for PHP_CodeSniffer itself.</description>

    <file>examples</file>
    <file>src</file>
    <file>tests</file>

    <arg name="basepath" value="."/>
    <arg name="colors" />
    <arg name="parallel" value="75" />
    <arg value="np"/>

    <rule ref="PSR2">
        <exclude-pattern>*.js</exclude-pattern>
    </rule>


</ruleset>